<VBox spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.mst_medical_app.controller.patient.DoctorsController">

    <HBox alignment="CENTER_LEFT" spacing="20">

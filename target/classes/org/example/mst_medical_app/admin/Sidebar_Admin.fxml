<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="250" spacing="140" stylesheets="@../../../../styles/sidebar.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mst_medical_app.controller.admin.SidebarAdminController">


    <!-- Menu Items -->
    <VBox spacing="8">

        <HBox fx:id="overviewItem" styleClass="sidebar-item">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                <image><Image url="@../../../../images/overview.png" /></image>
            </ImageView>
            <Button fx:id="overviewButton" style="-fx-background-color: transparent; -fx-text-fill: inherit;" text="Overview" />
        </HBox>

        <HBox fx:id="doctorItem" styleClass="sidebar-item">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                <image><Image url="@../../../../images/Docter_Management_Icon.png" /></image>
            </ImageView>
            <Button fx:id="doctorButton" style="-fx-background-color: transparent; -fx-text-fill: inherit;" text="Doctors" />
        </HBox>

        <HBox fx:id="patientItem" styleClass="sidebar-item">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                <image><Image url="@../../../../images/Patient_Management_Icon.png" /></image>
            </ImageView>
            <Button fx:id="patientButton" style="-fx-background-color: transparent; -fx-text-fill: inherit;" text="Patients" />
        </HBox>

        <HBox fx:id="appointmentItem" styleClass="sidebar-item">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                <image><Image url="@../../../../images/appointment_icon.png" /></image>
            </ImageView>
            <Button fx:id="appointmentButton" style="-fx-background-color: transparent; -fx-text-fill: inherit;" text="Appointments" />
        </HBox>

        <HBox fx:id="reportItem" styleClass="sidebar-item">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                <image><Image url="@../../../../images/icon-for-report-4.jpg" /></image>
            </ImageView>
            <Button fx:id="reportButton" style="-fx-background-color: transparent; -fx-text-fill: inherit;" text="Reports" />
        </HBox>

        <HBox fx:id="settingItem" styleClass="sidebar-item">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                <image><Image url="@../../../../images/settings_icon.png" /></image>
            </ImageView>
            <Button fx:id="settingButton" style="-fx-background-color: transparent; -fx-text-fill: inherit;" text="Settings" />
        </HBox>

        <HBox fx:id="logoutItem" styleClass="sidebar-item">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                <image><Image url="@../../../../images/logout_icon.png" /></image>
            </ImageView>
            <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: inherit;" text="Logout" />
        </HBox>

    </VBox>

    <padding>
        <Insets left="10.0" top="30.0" />
    </padding>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mst_medical_app.controller.admin.PatientsController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="500.0">
         <children>
            <Label prefHeight="35.0" text="Patient Management" />
            <HBox prefHeight="100.0" prefWidth="500.0" spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField prefHeight="35.0" prefWidth="400.0" promptText="Search by name or ID..." />
                  <Button alignment="CENTER_RIGHT" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="+ Add Patient" />
               </children>
               <HBox.margin>
                  <Insets left="200.0" right="10.0" />
               </HBox.margin>
            </HBox>
         </children>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
         <children>
            <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <items>
                  <TableView prefHeight="700.0" prefWidth="1000.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="C1" />
                      <TableColumn prefWidth="75.0" text="C2" />
                    </columns>
                  </TableView>
                  <VBox prefHeight="200.0" prefWidth="100.0" visible="false" />
               </items>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </SplitPane>
         </children>
      </VBox>
   </children>
</VBox>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.mst_medical_app.controller.doctor.SidebarDoctorController"
      prefWidth="250"
      spacing="150"
      stylesheets="@../../../../styles/sidebar.css">

    <!-- Logo -->

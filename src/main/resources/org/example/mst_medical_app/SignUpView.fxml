<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>

<VBox alignment="CENTER" prefHeight="1960.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mst_medical_app.controller.SignUpController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <StackPane prefHeight="1920.0" prefWidth="1920.0">
        <children>
            <HBox alignment="CENTER" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="832.0" prefWidth="1280.0" spacing="70.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #BCC1CA; -fx-border-width: 2; -fx-padding: 5;">
                <children>
                    <ImageView fitHeight="772.0" fitWidth="618.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../../images/Background.png" />
                        </image>
                        <HBox.margin>
                            <Insets right="40.0" />
                        </HBox.margin>
                    </ImageView>
                    <VBox alignment="CENTER" spacing="18" prefWidth="400" layoutX="100" layoutY="50"
                          style="-fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4);">

                        <ImageView fitHeight="80" fitWidth="80">
                            <image>
                                <Image url="@../../../images/medical_icon.png" />
                            </image>
                        </ImageView>

                        <Label text="Create Account" style="-fx-font-size: 22; -fx-font-weight: bold;" />

                        <TextField fx:id="fullNameField" promptText="Full Name" prefWidth="260"
                                   style="-fx-background-radius: 8; -fx-padding: 8 10;" />

                        <TextField fx:id="emailField" promptText="Email" prefWidth="260"
                                   style="-fx-background-radius: 8; -fx-padding: 8 10;" />

                        <TextField fx:id="usernameField" promptText="Username" prefWidth="260"
                                   style="-fx-background-radius: 8; -fx-padding: 8 10;" />

                        <PasswordField fx:id="passwordField" promptText="Password" prefWidth="260"
                                       style="-fx-background-radius: 8; -fx-padding: 8 10;" />

                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="260"
                                       style="-fx-background-radius: 8; -fx-padding: 8 10;" />

                        <ComboBox fx:id="roleCombo" prefWidth="260" promptText="Select Role"
                                  style="-fx-background-radius: 8;" />

                        <Button fx:id="signupButton" text="Sign Up"
                                style="-fx-background-color: #0D6EFD; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 16;" />

                        <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>

                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Already have an account?"/>
                            <Hyperlink fx:id="loginLink" text="Login here" />
                        </HBox>
                    </VBox>
                </children>
            </HBox>
        </children>
    </StackPane>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.mst_medical_app.controller.admin.AppointmentsController"
      spacing="15" VBox.vgrow="ALWAYS">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Appointments"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="addAppointmentBtn"
                text="+ Add Appointment"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 8;" />
    </HBox>


    <TextField fx:id="searchField"
               promptText="Search appointment..."
               prefWidth="300"
               style="-fx-background-radius: 8; -fx-border-radius: 8;" />

    <TableView fx:id="appointmentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="timeColumn" text="ðŸ•“ Time" prefWidth="150" />
            <TableColumn fx:id="doctorColumn" text="Doctor" prefWidth="200" />
            <TableColumn fx:id="patientColumn" text="Patient" prefWidth="200" />
            <TableColumn fx:id="roomColumn" text="Room" prefWidth="100" />
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="150" />
        </columns>
    </TableView>

    <padding>
        <Insets right="10.0"/>
    </padding>

</VBox>

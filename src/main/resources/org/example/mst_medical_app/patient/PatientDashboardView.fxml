<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16" style="-fx-background-color: #F8FAFC; -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mst_medical_app.controller.patient.PatientDashboardController">

    <!-- Title -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="ðŸ¥ Patient Dashboard" />
    </HBox>

    <!-- KPI Row -->
    <HBox spacing="12">
        <VBox alignment="CENTER" spacing="6" style="-fx-background-color: white; -fx-border-color: #E2E8F0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16; -fx-pref-width: 230;">
            <Label style="-fx-text-fill: #64748B;" text="Upcoming Appointments" />
            <Label fx:id="kpiAppointments" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="0" />
        </VBox>

        <VBox alignment="CENTER" spacing="6" style="-fx-background-color: white; -fx-border-color: #E2E8F0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16; -fx-pref-width: 230;">
            <Label style="-fx-text-fill: #64748B;" text="Doctors Consulted" />
            <Label fx:id="kpiDoctors" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="0" />
        </VBox>

        <VBox alignment="CENTER" spacing="6" style="-fx-background-color: white; -fx-border-color: #E2E8F0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16; -fx-pref-width: 230;">
            <Label style="-fx-text-fill: #64748B;" text="Messages" />
            <Label fx:id="kpiMessages" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="0" />
        </VBox>

        <VBox alignment="CENTER" spacing="6" style="-fx-background-color: white; -fx-border-color: #E2E8F0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16; -fx-pref-width: 230;">
            <Label style="-fx-text-fill: #64748B;" text="Health Tips" />
            <Label fx:id="kpiTips" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="0" />
        </VBox>
    </HBox>

    <!-- Health Overview -->
    <VBox spacing="8" style="-fx-background-color: white; -fx-border-color: #E2E8F0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16;">
        <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Health Overview" />

        <LineChart fx:id="healthLineChart" prefHeight="220">
            <xAxis>
                <CategoryAxis label="Month" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Health Score" />
            </yAxis>
        </LineChart>
    </VBox>

    <!-- Upcoming Appointments -->
    <VBox spacing="8" style="-fx-background-color: white; -fx-border-color: #E2E8F0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 16;">
        <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Upcoming Appointments" />
        <TableView fx:id="appointmentTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="colDate" prefWidth="120" text="Date" />
                <TableColumn fx:id="colTime" prefWidth="100" text="Time" />
                <TableColumn fx:id="colDoctor" prefWidth="180" text="Doctor" />
                <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
            </columns>
        </TableView>
        <Button fx:id="viewAllAppointmentsBtn" alignment="CENTER_RIGHT" style="-fx-background-color: #0D6EFD; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 16; -fx-font-weight: bold;" text="View All Appointments" />
    </VBox>
</VBox>
